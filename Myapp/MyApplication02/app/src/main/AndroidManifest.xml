<?xml version="1.0" encoding="UTF-8"?>
<manifest package="com.example.myapplication02" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE_EXTERNAL_STORAGE" />
<application
    android:theme="@style/Theme.MyApplication02"
    android:supportsRtl="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:label="@string/app_name"
    android:icon="@mipmap/ic_launcher"
    android:allowBackup="true">
    <activity android:name=".MainActivity"
        android:exported="true">
        <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>
    <activity android:name=".ShowActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.SHOW_APP_INFO"/>
        </intent-filter>
    </activity>
</application>

</manifest>