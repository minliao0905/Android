<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#C5DACF"
                    android:startColor="#7A8B93" />
                <corners android:radius="10dip" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#17668F"
                    android:startColor="#90C4DF" />

                <corners android:radius="10dip" />
            </shape>
        </item>
    </selector>
    <selector>
        <item
            android:state_pressed="false"
            android:color="@color/btn_green_n">
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#CED6D2"
                    android:startColor="#A88DC2DD" />

                <corners android:radius="10dip" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#9AC3D8"
                    android:startColor="#BFD1AA" />

                <corners android:radius="10dip" />
            </shape>
        </item>
    </selector>

</inset>