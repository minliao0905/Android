<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/toptv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/newnumberback_arr"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:background="@drawable/arr"></ImageButton>

        <TextView
            android:id="@+id/tv_newusertop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="+ 新建联系人"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/amazing" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/newuser_headimg"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:background="@drawable/add"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
    />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/ll_name"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/n1"
            ></ImageView>
        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="联系人姓名">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_name"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_phone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/r1"
            ></ImageView>

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="phone"
            android:hint="电话"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_address"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ad1"
            ></ImageView>

        <EditText
            android:id="@+id/ed_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:hint="地址"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/email"
            ></ImageView>

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            android:hint="邮件地址"></EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_birth"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_birth"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/b"
            ></ImageView>

        <EditText
            android:id="@+id/ed_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="date"
            android:hint="生日"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_othertext"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_othertext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/p1"
            ></ImageView>

        <EditText
            android:id="@+id/ed_othertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="备注"></EditText>
    </LinearLayout>

        <Button
            android:id="@+id/addnewphonebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="添加"></Button>




</LinearLayout>