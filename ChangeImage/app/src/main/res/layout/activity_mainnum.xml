<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame"
    android:background="@color/wholebg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:background="#FFF3BB"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left"

            >
            <TextView
                android:id="@+id/td_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动次数："
                android:textSize="20sp"
                android:paddingLeft="13dp"
                />
            <TextView
                android:id="@+id/tvScorenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/right"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/td_Hscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tvHScorenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>


    <com.example.changeimage.Makenum.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       >

    </com.example.changeimage.Makenum.GameView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnll"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="40dp"
    >
    <ImageView
        android:id="@+id/restartbtnnum"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="restart"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart"
        android:layout_gravity="center"
        android:textSize="16sp"
        />

</LinearLayout>


</LinearLayout>






